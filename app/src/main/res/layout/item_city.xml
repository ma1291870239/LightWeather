<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_weather"
    android:padding="10dp"
    android:background="@drawable/bg_weatherlist_round_grey">

    <ImageView
        android:visibility="gone"
        android:id="@+id/item_weathericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/delete"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/item_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_weathericon"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_city"
        android:layout_toRightOf="@+id/item_city"
        android:textSize="12sp"
        android:textColor="@color/text"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/item_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/item_city"
        android:layout_below="@+id/item_city"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:gravity="center"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/item_dir"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_txt"
        android:layout_toRightOf="@+id/item_txt"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:gravity="center"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/item_sc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_dir"
        android:layout_toRightOf="@+id/item_dir"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/delete"
        android:scaleType="center" />
    <TextView
        android:layout_marginRight="35dp"
        android:id="@+id/item_tmp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_delete"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:gravity="center"/>


</RelativeLayout>