<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_weather"
    android:layout_marginTop="@dimen/margin_8"
    android:padding="@dimen/padding_8"
    android:background="@drawable/bg_list_layout_line_theme">

    <ImageView
        android:id="@+id/item_weathericon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/item_tmp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@+id/item_weathericon"
        android:textSize="@dimen/text_21"
        android:textColor="@color/primary_black_text"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/item_qlty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/item_tmp"
        android:layout_alignBottom="@+id/item_tmp"
        android:layout_toRightOf="@+id/item_tmp"
        android:textSize="@dimen/text_13"
        android:textColor="@color/primary_black_text"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/item_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/item_tmp"
        android:layout_below="@+id/item_tmp"
        android:textSize="@dimen/text_15"
        android:textColor="@color/primary_black_text"
        android:gravity="center"/>
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/item_dir"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_txt"
        android:layout_toRightOf="@+id/item_txt"
        android:textSize="@dimen/text_15"
        android:textColor="@color/primary_black_text"
        android:gravity="center"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/item_sc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_dir"
        android:layout_toRightOf="@+id/item_dir"
        android:textSize="@dimen/text_15"
        android:textColor="@color/primary_black_text"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_city_delete"
        android:scaleType="center" />
    <TextView
        android:layout_marginRight="16dp"
        android:id="@+id/item_city"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/item_tmp"
        android:layout_alignBottom="@+id/item_tmp"
        android:layout_toLeftOf="@+id/item_delete"
        android:textSize="@dimen/text_13"
        android:textColor="@color/primary_black_text"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/item_txt"
        android:layout_alignBottom="@+id/item_txt"
        android:layout_alignRight="@id/item_city"
        android:textSize="@dimen/text_13"
        android:textColor="@color/primary_black_text"
        android:gravity="center"/>

</RelativeLayout>