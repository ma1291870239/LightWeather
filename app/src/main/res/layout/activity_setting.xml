<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ma.lightweather.activity.SettingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        style="@style/AppToolbar">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        style="@style/SettingLayout">
        <TextView
            style="@style/SettingTitle"
            android:text="打开通知图标"/>
        <TextView
            style="@style/SettingText"
            android:text="通知栏天气图标，默认关闭"/>
        <Switch
            android:id="@+id/notifySwitch"
            style="@style/SettingSwitch"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        style="@style/SettingLayout">
        <TextView
            style="@style/SettingTitle"
            android:text="状态栏显示"/>
        <TextView
            style="@style/SettingText" />
        <Switch
            android:id="@+id/statusSwitch"
            style="@style/SettingSwitch"/>
    </LinearLayout>
    <LinearLayout
        style="@style/SettingLayout">
        <TextView
            style="@style/SettingTitle"
            android:text="关闭生活指数"/>
        <TextView
            style="@style/SettingText"
            android:text="旧版生活指数，默认打开"/>
        <Switch
            android:id="@+id/lifeSwitch"
            style="@style/SettingSwitch"/>
    </LinearLayout>
    <LinearLayout
        style="@style/SettingLayout">
        <TextView
            style="@style/SettingTitle"
            android:text="新旧版本切换"/>
        <TextView
            style="@style/SettingText"
            android:text="新旧版本页面切换，默认新版"/>
        <Switch
            android:id="@+id/versionSwitch"
            style="@style/SettingSwitch"/>
    </LinearLayout>

</LinearLayout>
