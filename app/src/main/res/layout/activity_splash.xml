<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ma.lightweather.activity.SplashActivity">
    <ImageView
        android:id="@+id/backIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/splash"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/skipTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/margin_16"
        android:paddingHorizontal="@dimen/padding_16"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_15"
        android:textColor="@color/primary_white_text"
        android:gravity="center"
        android:background="@drawable/bg_splash_textview_black"/>
    <ImageView
        android:id="@+id/downloadIv"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="@dimen/margin_16"
        android:padding="@dimen/margin_8"
        android:src="@drawable/ic_file_download_white_48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_splash_textview_black"/>

</RelativeLayout>
