        <item name="colorAccent">@color/greyColorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>b
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="WeatherFragDetailLayout" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppToolbar" >
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppToolbarText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:textColor">@color/primary_white_text</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="WeatherFragDetailText" >
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/primary_white_text</item>
    </style>

    <style name="WeatherFragTitleLayout" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/padding_16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WeatherFragTitleText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:textColor">@color/primary_black_text</item>
        <item name="android:background">@drawable/bg_weather_tv_line_theme</item>
    </style>

    <style name="WeatherFragText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PhotoFragLayout" >
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:background">@drawable/bg_photo_layout_line_theme</item>
    </style>

    <style name="PhotoFragTitle" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/primary_black_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PhotoFragText" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/primary_black_text</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="SettingLayout" >
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/padding_8</item>
        <item name="android:background">@drawable/bg_setting_layout_line_theme</item>
    </style>

    <style name="SettingTitle" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/primary_black_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingText" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/secondary_black_text</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="SettingSwitch" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
