<resources>

    <!-- Base application theme. -->
    <style name="CyanAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyanColorPrimary</item>
        <item name="colorPrimaryDark">@color/cyanColorPrimaryDark</item>
        <item name="colorAccent">@color/cyanColorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

